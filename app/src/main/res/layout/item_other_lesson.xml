<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_other_lesson_cover_img_cardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_other_lesson_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:scaleType="centerCrop"
            android:src="@drawable/senior1" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_other_lesson_badge_title_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_lesson"
        android:gravity="center"
        android:text="운동/스포츠"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_other_lesson_cover_img_cardView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_other_lesson_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxWidth="150dp"
        android:maxLines="1"
        android:text="멋진 인물사진은 어떻게 찍는가 - 한달완성"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_other_lesson_cover_img_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_other_lesson_cover_img_cardView" />

    <TextView
        android:id="@+id/item_other_lesson_teacher_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingBottom="10dp"
        android:text="Mr.PhotoMan"
        android:textColor="#a8a8a8"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/item_other_lesson_cover_img_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_other_lesson_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>