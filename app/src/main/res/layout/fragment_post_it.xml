<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/post_it_img_iv"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/senior1"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/post_it_title_tv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_it_img_iv"
        android:text="시니어시니어시니어"
        android:layout_marginStart="10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/view_detail_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_apply"
        app:layout_constraintTop_toTopOf="@id/post_it_title_tv"
        app:layout_constraintStart_toEndOf="@id/post_it_title_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세보기"
        android:layout_marginEnd="10dp"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/view_detail_iv"
        app:layout_constraintBottom_toBottomOf="@id/post_it_title_tv"
        app:layout_constraintStart_toEndOf="@id/post_it_title_tv"
        app:layout_constraintEnd_toEndOf="parent"/>




    <TextView
        android:id="@+id/post_it_intro_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"
        android:text="소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글"
        app:layout_constraintTop_toBottomOf="@id/post_it_title_tv"/>


</androidx.constraintlayout.widget.ConstraintLayout>